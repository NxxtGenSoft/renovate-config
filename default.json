{
  "description": "Default config for NxxtGenSoft repositories",
  "extends": [
    "config:recommended",
    "group:allNonMajor",
    ":maintainLockFilesWeekly",
    ":semanticCommitTypeAll(chore)"
  ],
  "meteor": {
    "enabled": false
  },
  "ignoreDeps": [
    "node"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "rangeStrategy": "bump",
  "npm": {
    "commitMessageTopic": "{{prettyDepType}} {{depName}}"
  },
  "schedule": [
    "on Monday"
  ]
}
